#include <iostream>
#include <string>
using namespace std;

class Book {
 public:
  string title;
  float price;
  int *stock;
  Book() {
    title = "Unknown";
    price = 0.0;
    stock = new int(30);
  }
 
  void update(string abc){
  title = abc;
cout << "Changed title to " << abc << endl;
  }
 
  void purchase(){
  int quantity = -1;

if (*stock <= 5){
cout << "Low On Stock. Less than 5 books remain" << endl;
}

cout << "Enter quantity of books you'd like to purchase of title " << title <<  ": ";
cin >> quantity;

if (quantity > *stock){
cout << "Quantity asked for is more than stock available!" << endl;
}
else{
*stock -= quantity;
cout << "The remaining stock is now: " << *stock << endl;
}
  }
};

int main(){
Book b1;
Book b2;

b1.update("A Good Book");

b1.purchase();

b2.update("Bad Book");

b2.purchase();

b2.purchase();
}
